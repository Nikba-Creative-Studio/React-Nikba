html, body
  background-color #24272e!important

.navbar 
  background-color #24272f!important
  border-bottom 1px solid #2c2f35!important;

  .links
    background-color transparent!important

.nav-links
  .nav-item
    margin 0!important
    a
      color #f6f7f9!important
      padding .375rem .75rem!important
      border-radius 9999px!important
      &:hover
        border none!important
        background-color rgba(246,247,249,.05)!important

.site-name
  color: #f6f7f9!important
.sidebar
  background-color: #2c2f35!important
  border-right: 1px solid rgba(246,247,249,.05)!important
  .nav-links
    border-bottom: 1px solid rgba(246,247,249,.05)!important
  .sidebar-heading
    color: #f6f7f9!important

@media (max-width: 719px)
  .sidebar
    background-color: rgb(22 24 29)!important
    border-right: 1px solid rgba(246,247,249,.05)!important
    .nav-links
      border-bottom: 1px solid rgba(246,247,249,.05)!important

.home 
  .hero 
    img
      max-width: 250px!important
      max-height: 250!important
    .description
      max-width: 70rem!important

    .action-button
      background-color: #3a7da1!important
      border-color: #3a7da1!important
      border-radius: 9999px!important
      padding: 0.6rem 2rem!important
      &:hover 
        background-color: #366c8a!important
  .features
    border-top: 1px solid rgba(246,247,249,.05)!important
    h2, p
      color: #f6f7f9!important
  .footer
    border-top: 1px solid rgba(246,247,249,.05)!important
    color: #f6f7f9!important
#main-title
  color: #f6f7f9!important
  
.search-box
  input
    background-color: #343a44!important
    border-color: #343a44!important
    color: #9ba1b2!important
  .suggestions
    background: #23272f!important

.page
  h1, h2, h3, h4, h5, h6, p
    color: #f6f7f9!important
  a
    color: #3a7da1!important